# Node Environment
NODE_ENV=development
PORT=3001

# Plaid Configuration
# Get your credentials from https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
# Optional: Specify products you want to use
PLAID_PRODUCTS=transactions,accounts
PLAID_COUNTRY_CODES=US

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption Configuration
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_change_this_in_production

# Data Storage
DATA_DIR=./data

# Storage Configuration (filesystem or s3)
# For local development: filesystem
# For production: s3
STORAGE_TYPE=filesystem

# S3 Configuration (for production)
# S3_BUCKET_NAME=budget-app-data
# S3_PREFIX=data/
# AWS_REGION=us-east-1

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:5173

# API Configuration
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=debug

# GitHub Integration (for feedback feature)
# Create a GitHub Personal Access Token with repo scope
# https://github.com/settings/personal-access-tokens/new
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=JCarran0
GITHUB_REPO=household-budgeting