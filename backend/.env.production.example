# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Plaid Configuration (Production or Development Keys)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox  # Change to 'development' or 'production' when ready
PLAID_PRODUCTS=transactions,accounts
PLAID_COUNTRY_CODES=US

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-change-this
JWT_EXPIRES_IN=7d

# Storage Configuration for S3
STORAGE_TYPE=s3
S3_BUCKET_NAME=budget-app-data-prod
S3_PREFIX=data/
AWS_REGION=us-east-1
# Note: IAM role credentials are used automatically on EC2

# For backwards compatibility (if still needed)
DATA_DIR=/home/appuser/budget-data

# CORS Configuration (Production URL)
FRONTEND_URL=https://budget.jaredcarrano.com

# API Configuration
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=info

# Encryption (for sensitive data)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key